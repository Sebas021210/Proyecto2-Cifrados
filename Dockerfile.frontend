# Etapa 1: build
FROM node:20-alpine AS builder
WORKDIR /app

# Copiar dependencias
COPY frontend/Proyecto02/package.json package-lock.json* ./
RUN npm install

# Copiar el resto del c칩digo y compilar
COPY frontend/Proyecto02 .
RUN npm run build

# Etapa 2: servir la app est치tica con nginx
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html

# Eliminar configuraci칩n por defecto de nginx y usar una b치sica compatible con Vite
RUN rm /etc/nginx/conf.d/default.conf
COPY config/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]